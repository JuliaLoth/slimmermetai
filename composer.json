{
    "name": "slimmermetai/website",
    "description": "SlimmerMetAI website",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=8.0",
        "stripe/stripe-php": "^17.3",
        "google/apiclient": "^2.0",
        "vlucas/phpdotenv": "^5.0",
        "phpoffice/phppresentation": "^1.1.0",
        "nikic/fast-route": "^1.3",
        "php-di/php-di": "^7.0",
        "phpmailer/phpmailer": "^6.9",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "symfony/filesystem": "^6.0",
        "symfony/finder": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.10",
        "vimeo/psalm": "^5.15",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "legacy:scan": "php bin/legacy_migrate.php",
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse src --level=6",
        "psalm": "psalm",
        "cs:check": "phpcs src --standard=PSR12 --warning-severity=0",
        "cs:fix": "phpcbf src --standard=PSR12",
        "ci": [
            "@cs:check",
            "@analyse", 
            "@test"
        ]
    },
    "autoload": {
        "psr-4": {
            "App\\Domain\\": "src/Domain/",
            "App\\Application\\": "src/Application/",
            "App\\Infrastructure\\": "src/Infrastructure/",
            "App\\Http\\": "src/Http/",
            "SlimmerMetAI\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
