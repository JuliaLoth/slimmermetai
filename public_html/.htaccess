# SlimmerMetAI - Beveiligingsinstellingen

# PHP instellingen
php_flag display_errors off
php_value upload_max_filesize 5M
php_value post_max_size 8M
php_value max_execution_time 60
php_value max_input_time 60
php_value memory_limit 128M
php_flag session.cookie_httponly on

# Voorkom PHP versie-informatie en X-Powered-By header
<IfModule mod_headers.c>
    Header unset X-Powered-By
</IfModule>

# Voorkom directory listing
Options -Indexes

# Bescherm bestanden
<FilesMatch "^(\.htaccess|\.gitignore)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Bescherm gevoelige mappen
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Maak uitzondering voor /api/stripe/config.php en alle bestanden in /api/stripe/
    RewriteRule ^api/stripe/ - [L]
    
    # Maak uitzondering voor het Stripe API config bestand
    RewriteRule ^stripe-api-config\.php$ - [L]
    
    # Blokkeer toegang tot alle andere config.php bestanden
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule config\.php$ - [F,L]
    
    # Voorkom directe toegang tot includes map
    RewriteRule ^includes/ - [F,L]
    
    # Voorkom directe toegang tot database map
    RewriteRule ^database/ - [F,L]
    
    # Stuur HTTP naar HTTPS (geactiveerd voor SSL)
    RewriteCond %{HTTPS} off
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Verwijder .html extensie uit URL
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.+?)/?$ $1.php [L]

    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.html -f
    RewriteRule ^(.+?)/?$ $1.html [L]

    # Verwijder .php extensie uit URL (alleen voor GET requests om POST te behouden)
    RewriteCond %{REQUEST_METHOD} GET
    RewriteCond %{THE_REQUEST} ^GET\ /([^.]+)\.php
    RewriteRule ^(.+)\.php$ /$1 [R=301,L]

    # Interne rewrite voor PHP bestanden
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.+?)/?$ $1.php [L]
    
    # Stuur index naar hoofdmap
    RewriteRule ^index$ / [R=301,L]
</IfModule>

# Gemoderniseerde beveiligingsheaders
<IfModule mod_headers.c>
    # Nosniff header (voorkomt MIME-type sniffing)
    Header set X-Content-Type-Options "nosniff"
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Verwijder Server-header
    Header unset Server
    
    # Content Security Policy - Modern en geoptimaliseerd
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' https://slimmermetai.com 'unsafe-inline' https://code.jquery.com https://cdn.jsdelivr.net https://substackapi.com https://js.stripe.com https://apis.google.com https://accounts.google.com https://*.substack.com https://*.substackcdn.com https://cloudflareinsights.com; script-src-elem 'self' https://slimmermetai.com 'unsafe-inline' https://code.jquery.com https://cdn.jsdelivr.net https://substackapi.com https://js.stripe.com https://apis.google.com https://accounts.google.com https://*.substack.com https://*.substackcdn.com https://cloudflareinsights.com; style-src 'self' https://slimmermetai.com 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net https://accounts.google.com; font-src 'self' https://slimmermetai.com https://fonts.gstatic.com; img-src 'self' https://slimmermetai.com data: https://*.substack.com https://*.substackcdn.com https://*.cloudfront.net https://*.s3.amazonaws.com https://cdn.substack.com https://substack.com https://substackcdn.com https://slimmermetai.substack.com https://newsletter.slimmermetai.nl https://accounts.google.com https://*.googleusercontent.com; connect-src 'self' https://substackapi.com https://api.stripe.com https://oauth2.googleapis.com https://www.googleapis.com https://cloudflareinsights.com https://accounts.google.com; frame-src 'self' https://slimmermetai.substack.com https://js.stripe.com https://accounts.google.com; frame-ancestors 'self'"
    
    # Cookies als secure en httpOnly markeren
    Header edit Set-Cookie "(?i)^(.*)(;\s*partitioned)(.*)" "$1$3"
    Header edit Set-Cookie "(?i)^(.*)((?!;\s*httponly).*)$" "$1; HttpOnly$2"
    Header edit Set-Cookie "(?i)^(.*)((?!;\s*secure).*)$" "$1; Secure$2"
</IfModule>

# Correcte MIME-types voor bestanden
<IfModule mod_mime.c>
    # JavaScript
    AddType application/javascript .js
    AddType application/json .json
    
    # CSS
    AddType text/css .css
    
    # SVG
    AddType image/svg+xml .svg .svgz
    AddEncoding gzip .svgz
    
    # Fonts
    AddType application/font-woff .woff
    AddType application/font-woff2 .woff2
    AddType application/vnd.ms-fontobject .eot
    AddType application/x-font-ttf .ttf
    AddType application/x-font-opentype .otf
    
    # HTML, XML
    AddType text/html .html .htm
    AddType text/xml .xml
    
    # Audio
    AddType audio/ogg .oga .ogg
    AddType audio/mp4 .m4a
    AddType audio/mpeg .mp3
    
    # Video
    AddType video/mp4 .mp4 .m4v
    AddType video/ogg .ogv
    AddType video/webm .webm
    
    # PDF
    AddType application/pdf .pdf
</IfModule>

# Compressie inschakelen
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/font-woff application/font-woff2 application/x-font-ttf image/svg+xml
</IfModule>

# Geoptimaliseerde caching regels
<IfModule mod_headers.c>
    # Statische afbeeldingen maximaal cachen (1 jaar)
    <FilesMatch "\.(jpg|jpeg|png|gif|ico|svg)$">
        Header set Cache-Control "max-age=31536000, public, immutable"
    </FilesMatch>
    
    # Lettertypen maximaal cachen (1 jaar)
    <FilesMatch "\.(ttf|otf|woff|woff2|eot)$">
        Header set Cache-Control "max-age=31536000, public, immutable"
    </FilesMatch>
    
    # CSS en JavaScript files (1 maand)
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "max-age=2592000, public"
    </FilesMatch>
    
    # HTML bestanden niet cachen
    <FilesMatch "\.(html|htm|php)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
    </FilesMatch>
    
    # Externe content van andere domeinen (zoals Substack) correct laten cachen
    <FilesMatch "^$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>

# 404 foutpagina
ErrorDocument 404 /404.php

# 403 foutpagina
ErrorDocument 403 /403.php

# 500 foutpagina
ErrorDocument 500 /500.php