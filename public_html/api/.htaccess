# SlimmerMetAI API configuratie
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /api/
    
    # Sta directe toegang toe tot bestanden (geen routing voor bestaande bestanden)
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    
    # Routing voor API endpoints (alleen indien nodig)
    # RewriteRule ^(.*)$ index.php [QSA,L]

    # Auth endpoints
    RewriteRule ^auth/login/?$ auth/login.php [L,QSA]
    RewriteRule ^auth/register/?$ auth/register.php [L,QSA]
    RewriteRule ^auth/forgot-password/?$ auth/forgot-password.php [L,QSA]
    RewriteRule ^auth/reset-password/?$ auth/reset-password.php [L,QSA]

    # Stuur 404 voor onbekende endpoints
    RewriteRule ^ - [R=404,L]

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^users/register/?$ users/register.php [L]
</IfModule>

# CORS headers voor API toegang
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization"
    Header set Access-Control-Max-Age "3600"
    
    # Security headers
    Header set X-Content-Type-Options "nosniff"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Content Security Policy met frame-ancestors
    Header set Content-Security-Policy "default-src 'self'; frame-ancestors 'self';"
</IfModule> 