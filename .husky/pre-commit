#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "üîç Running local CI/CD checks before commit..."

# Check environment variable for test mode
# Set CI_FULL_TESTS=1 to run tests, or leave unset for fast mode
if [ "$CI_FULL_TESTS" = "1" ]; then
    echo "üß™ Full mode: Running with tests (set by CI_FULL_TESTS=1)"
    SKIP_TESTS_FLAG=""
else
    echo "‚ö° Fast mode: Skipping tests for speed (set CI_FULL_TESTS=1 to include tests)"
    SKIP_TESTS_FLAG="-SkipTests"
fi

# Voer lokale CI/CD uit
if command -v pwsh >/dev/null 2>&1; then
    # PowerShell Core beschikbaar
    pwsh -ExecutionPolicy Bypass -File ./scripts/local-ci.ps1 $SKIP_TESTS_FLAG
elif command -v powershell >/dev/null 2>&1; then
    # Windows PowerShell beschikbaar
    powershell -ExecutionPolicy Bypass -File ./scripts/local-ci.ps1 $SKIP_TESTS_FLAG
else
    echo "‚ö†Ô∏è PowerShell niet gevonden, proberen met bash..."
    if [ -f "./scripts/local-ci.sh" ]; then
        ./scripts/local-ci.sh
    else
        echo "‚ùå Geen lokaal CI/CD script gevonden!"
        exit 1
    fi
fi

if [ $? -ne 0 ]; then
    echo "‚ùå Local CI/CD checks gefaald! Commit wordt geweigerd."
    echo "üí° Los de issues op en probeer opnieuw."
    echo "üí° Tip: Run 'composer run test' om tests lokaal uit te voeren"
    exit 1
fi

echo "‚úÖ Local CI/CD checks geslaagd! Commit wordt toegestaan." 