# Database configuratie
DB_HOST=localhost
DB_NAME=database_naam
DB_USER=database_gebruiker
DB_PASS=database_wachtwoord

# JWT configuratie
JWT_SECRET=jouw_jwt_secret_key
JWT_EXPIRATION=3600

# Stripe configuratie
STRIPE_SECRET_KEY=jouw_stripe_secret_key
STRIPE_PUBLIC_KEY=jouw_stripe_public_key
STRIPE_WEBHOOK_SECRET=jouw_stripe_webhook_secret

# Site configuratie
SITE_URL=https://jouw-domein.nl
ADMIN_EMAIL=admin@jouw-domein.nl
MAIL_FROM=noreply@jouw-domein.nl
MAIL_FROM_NAME=JouwSiteNaam
MAIL_REPLY_TO=support@jouw-domein.nl

# Debug instellingen
DEBUG_MODE=false
DISPLAY_ERRORS=false

# Upload limieten
MAX_UPLOAD_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Sessie instellingen
SESSION_LIFETIME=604800
SESSION_NAME=JOUWSITE_SESSION
COOKIE_DOMAIN=.jouw-domein.nl
COOKIE_PATH=/
COOKIE_SECURE=true
COOKIE_HTTPONLY=true

# Beveiliging
PASSWORD_MIN_LENGTH=8
BCRYPT_COST=12
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900

# reCAPTCHA
RECAPTCHA_SITE_KEY=jouw_recaptcha_site_key
RECAPTCHA_SECRET_KEY=jouw_recaptcha_secret_key 