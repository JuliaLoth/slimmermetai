# SlimmerMetAI - Beveiligingsinstellingen

# PHP instellingen
php_flag display_errors off
php_value upload_max_filesize 5M
php_value post_max_size 8M
php_value max_execution_time 60
php_value max_input_time 60
php_value memory_limit 128M
php_flag session.cookie_httponly on

# Voorkom directory listing
Options -Indexes

# Bescherm bestanden
<FilesMatch "^(\.htaccess|\.gitignore|config\.php)">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Bescherm mappen
<FilesMatch "^\.">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Beveilig gevoelige mappen
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Voorkom directe toegang tot includes map
    RewriteRule ^includes/ - [F,L]
    
    # Voorkom directe toegang tot database map
    RewriteRule ^database/ - [F,L]
    
    # Stuur HTTP naar HTTPS (uncomment als je SSL gebruikt)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # URL zonder .html extensie
    # Voor bestaande bestanden/mappen niets doen
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Controleer of de .html versie bestaat voor niet-index pagina's
    RewriteCond %{REQUEST_FILENAME}.html -f
    RewriteRule ^(.+)$ $1.html [L]
    
    # Stuur index naar hoofdmap
    RewriteRule ^index$ / [R=301,L]
</IfModule>

# Beveilig tegen XSS en klikframing
<IfModule mod_headers.c>
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-Content-Type-Options "nosniff"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Verwijder Server-header (werkt niet altijd)
    Header unset Server
    
    # Content Security Policy (aangepast voor nieuwsartikelen)
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://code.jquery.com https://cdn.jsdelivr.net https://substackapi.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https://*.substack.com https://*.substackcdn.com https://*.cloudfront.net https://bucketeer-*.s3.amazonaws.com https://cdn.substack.com https://substack.com https://substackcdn.com https://slimmermetai.substack.com https://newsletter.slimmermetai.nl; connect-src 'self' https://substackapi.com; frame-src 'self' https://slimmermetai.substack.com"
</IfModule>

# Beveilig tegen MIME-type sniffing
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
</IfModule>

# Compressie inschakelen
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# 404 foutpagina
ErrorDocument 404 /404.php

# 403 foutpagina
ErrorDocument 403 /403.php

# 500 foutpagina
ErrorDocument 500 /500.php 