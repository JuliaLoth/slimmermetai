{
  "name": "slimmermetai-site",
  "version": "1.0.0",
  "type": "module",
  "description": "Deze repository bevat de code voor de SlimmerMetAI.com website, inclusief de frontend en PHP API voor hosting op Antagonist.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "vite",
    "build": "vite build",
    "watch": "vite build --watch",
    "lint": "eslint \"resources/js/**/*.js\"",
    "lint:css": "stylelint \"resources/css/**/*.css\" || true",
    "format": "prettier --write \"resources/js/**/*.js\" \"**/*.{css,scss,md}\"",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "autoprefixer": "^10.4.21",
    "cssnano": "^5.1.15",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "postcss": "^8.5.3",
    "postcss-preset-env": "^10.1.6",
    "prettier": "^3.2.5",
    "sass": "^1.88.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "vite": "^6.3.5",
    "vite-plugin-purgecss": "^0.2.12",
    "vite-plugin-static-copy": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
